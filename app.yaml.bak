runtime: python39
entrypoint: gunicorn -b :$PORT app:app

instance_class: F1
automatic_scaling:
  target_cpu_utilization: 0.65
  min_instances: 0
  max_instances: 1

env_variables:
  # WARNING: In production, use Secret Manager!
  # These are placeholders. You should set these via gcloud deploy --set-env-vars
  FLASK_ENV: production
  generated_secret_key: 'change_this_to_random_string'
